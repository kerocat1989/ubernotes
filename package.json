{
  "name": "ubernotes",
  "version": "1.0.0",
  "description": "Floating note widgets with AI assistance and voice dictation",
  "main": "src/main.js",
  "author": "UberNotes",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.ubernotes.app",
    "productName": "UberNotes",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "UberNotes",
      "icon": "assets/icon.icns"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ]
  }
}
